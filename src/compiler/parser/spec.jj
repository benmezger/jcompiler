void start_variable() : {} {
    <VARIABLE> {semantic.action8();} (variable_declaration())+ (end_constant())?
}

void constant_declaration() : {} {
    constant_identifiers_list() <IS> type_constant() {semantic.action6();} <ASSIGN> constant_result() {semantic.action7(token);} <DOT>
