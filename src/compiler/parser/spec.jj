void element(RecoverySet g) : {} {
    (<IDENTIFIER> {semantic.action24(token.image);} index() {semantic.action51();})
    | <NUM> {semantic.action26(token.image);} | <NUMBER_REAL> {semantic.action27(token.image);} | <STRING_LITERAL> {semantic.action28(token.image);}
    | <TRUE> {semantic.action52();} | <UNTRUE> {semantic.action53();} | (<OPEN_PARENTHESIS> expression(g) <CLOSE_PARENTHESIS>)
    | (<LOGICAL_NOT> <OPEN_PARENTHESIS> expression(g) <CLOSE_PARENTHESIS> {semantic.action54();})
}

